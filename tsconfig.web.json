{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/shared/**/*",
    "src/server/**/*",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/src/*"],
      "@": ["./src/renderer/src"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/server"],
      "@server/*": ["src/server/*"]
    }
  }
}
