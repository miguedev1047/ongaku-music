{
  "name": "ongaku-music",
  "version": "1.0.6-experimental",
  "description": "A lightweight desktop music player with playlist management and local audio playback",
  "main": "./out/main/index.js",
  "author": {
    "name": "Miguel Angel",
    "email": "miguedev1047@gmail.com",
    "url": "https://github.com/miguedev1047"
  },
  "homepage": "https://github.com/miguedev1047/ongaku-music",
  "build": {
    "appId": "com.ongaku.music",
    "productName": "Ongaku Music",
    "publish": [
      {
        "provider": "github",
        "owner": "miguedev1047",
        "repo": "ongaku-music"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "dist": "npm run typecheck && electron-vite build && electron-builder",
    "dist:publish": "electron-vite build && electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "check:token": "bash scripts/check-gh-token.sh",
    "build:linux:publish": "npm run build && electron-builder --linux --publish always",
    "build:win:publish": "npm run build && electron-builder --win --publish always",
    "build:mac:publish": "npm run build && electron-builder --mac --publish always",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/node": "^1.4.3",
    "@gsap/react": "^2.1.2",
    "@hono/node-server": "^1.19.7",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sinclair/typebox": "^0.34.47",
    "@tabler/icons-react": "^3.36.1",
    "@tanstack/devtools-vite": "^0.4.1",
    "@tanstack/react-devtools": "^0.9.1",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-router": "^1.145.7",
    "@tanstack/react-router-devtools": "^1.145.7",
    "babel-plugin-react-compiler": "^1.0.0",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-updater": "^6.3.9",
    "elysia": "^1.4.21",
    "fs-extra": "^11.3.3",
    "gsap": "^3.13.0",
    "hono": "^4.11.3",
    "lucide-react": "^0.562.0",
    "motion": "^12.25.0",
    "music-metadata": "^11.10.5",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react-scan": "^0.4.3",
    "react-use-measure": "^2.1.7",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-scrollbar": "^4.0.2",
    "tw-animate-css": "^1.4.0",
    "update-electron-app": "^3.1.2",
    "use-debounce": "^10.0.6",
    "virtua": "^0.48.2",
    "ytdlp-nodejs": "^2.3.5",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-plugin": "^1.145.7",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "dotenv": "^17.2.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "extract-colors": "^4.2.1",
    "prettier": "^3.7.4",
    "react-fast-marquee": "^1.6.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
